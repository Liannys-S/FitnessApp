@model User
<section>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-8">
                <div class="card" style="border-radius: 1rem">
                    <div class="row g-0">
                        <div class="d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-controller="User" asp-action="Register" method="POST" class="d-flex flex-column align-items-center justify-content-center">
                                    <div class="d-flex align-items-center mb-3 pb-1 justify-content-center">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219"></i>
                                        <span class="h1 fw-bold mb-0">FitShare</span>
                                    </div>
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">
                                        Create a new account
                                    </h5>
                                    <div class="form-outline mb-4 col-lg-7">
                                        <input asp-for="FirstName" class="form-control form-control-lg" />
                                        <label asp-for="FirstName" class="form-label"></label>
                                        <span class="text-danger" asp-validation-for="FirstName"></span>
                                    </div>
                                    <div class="form-outline mb-4 col-lg-7 ">
                                        <input asp-for="LastName" class="form-control form-control-lg" />
                                        <label asp-for="LastName" class="form-label"></label>
                                        <span class="text-danger" asp-validation-for="LastName"></span>
                                    </div>
                                    <div class="form-outline mb-4 col-lg-7 ">
                                        <input asp-for="Email" class="form-control form-control-lg" />
                                        <label asp-for="Email" class="form-label"></label>
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-outline mb-4 col-lg-7 ">
                                        <input asp-for="Password" class="form-control form-control-lg" />
                                        <label asp-for="Password" class="form-label"></label>
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-outline mb-4 col-lg-7 ">
                                        <input asp-for="PasswordConfirm" class="form-control form-control-lg" />
                                        <label asp-for="PasswordConfirm" class="form-label"></label>
                                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block">
                                            Register
                                        </button>
                                    </div>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81">
                                        Already have an account?
                                        <a href="/" style="color: #393f81">Login here</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>