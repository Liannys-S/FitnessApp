@model List<Workout> 

<div class="container mt-5">

        <form asp-action="All" asp-controller="Workout"  method="get" class="col-md-3 float-md-end my-3">
            <div class="input-group">
                <input class="form-control" type="text" name="search" placeholder="Search...">
                <button class="btn btn-light">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                    </svg>
                </button>
            </div>
        </form>

        <h1 class="display-3 text-center mb-5">All workouts</h1>
        @foreach(var workout in Model)
        {
            <div class="mb-3 border-bottom border-secondary">
                <a href="/workout/@workout.WorkoutId" class="text-decoration-none fs-1 text-muted">@workout.Title</a>
                <p class="fst-italic">By: @workout.Author.FirstName</p>
            </div>
        }
</div>